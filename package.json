{
  "name": "ipo-tracker",
  "version": "1.0.0",
  "description": "Live IPO tracking and analytics platform with real-time GMP, subscription data, and allotment status",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset",
    "postinstall": "prisma generate",
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next out node_modules/.cache",
    "docker:build": "docker build -t ipo-tracker .",
    "docker:run": "docker run -p 3000:3000 ipo-tracker"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@prisma/client": "^5.22.0",
    "@upstash/redis": "^1.35.3",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "cron": "^3.1.7",
    "csv-parser": "^3.0.0",
    "date-fns": "^3.6.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.427.0",
    "next": "^14.2.5",
    "next-auth": "^4.24.7",
    "nodemailer": "^6.9.14",
    "playwright": "^1.46.0",
    "prisma": "^5.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.12.7",
    "sharp": "^0.33.4",
    "socket.io": "^4.8.1",
    "tailwind-merge": "^2.4.0",
    "ws": "^8.18.3",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.31",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.14.12",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.21",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "next-pwa": "^5.6.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.3.3",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "string-replace-loader": "^3.2.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4",
    "util": "^0.12.5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test"
    }
  },
  "keywords": [
    "ipo",
    "stock market",
    "investment",
    "gmp",
    "grey market premium",
    "subscription",
    "allotment",
    "trading",
    "finance",
    "nse",
    "bse",
    "india",
    "real-time",
    "analytics",
    "dashboard"
  ],
  "author": {
    "name": "IPO Tracker Team",
    "email": "contact@ipo-tracker.com",
    "url": "https://ipo-tracker.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ipo-tracker/platform.git"
  },
  "bugs": {
    "url": "https://github.com/ipo-tracker/platform/issues"
  },
  "homepage": "https://ipo-tracker.com",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/ipo-tracker"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{js,ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}
